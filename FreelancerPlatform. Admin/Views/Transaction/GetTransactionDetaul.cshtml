@model FreelancerPlatform.Application.Dtos.Transaction.TransactionQuickViewModelSecond

@{
    ViewData["Title"] = "Chi tiết Giao dịch";
}

<div class="container mt-4">
    <h1>Chi tiết Giao dịch</h1>
    <div class="card mt-3">
        <div class="card-body">
            <p><strong>Mã tài khoản chuyển:</strong> @Model.FreelancerA</p>
            <p><strong>Tên tài khoản chuyển:</strong> @Model.LastNameA @Model.FirstNameA</p>
            <p><strong>Số tiền:</strong> @Model.Amount.ToString("N0") đ</p>
            <p><strong>Ngày chuyển:</strong> @Model.CreateDay.ToString("dd/MM/yyyy HH:mm")</p>
            <hr />
            <p><strong>Mã tài khoản nhận:</strong> @Model.FreelancerB</p>
            <p><strong>Tên tài khoản nhận:</strong> @Model.LastNameB @Model.FirstNameB</p>
            <p><strong>Số tài khoản nhận:</strong> @Model.BankNumberReceipt</p>
            <p><strong>Ngân hàng tài khoản nhận:</strong> @Model.BankNameReceipt</p>
        </div>
    </div>
</div>
