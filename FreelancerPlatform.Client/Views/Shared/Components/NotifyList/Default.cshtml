@model List<FreelancerPlatform.Application.Dtos.Notification.NotificationQuickViewModel>

@{
    if (Model.Count > 0)
    {
        <div id="notificationList" style="display: none; position: absolute; top: 30px; left: 100%; background: white; border: 1px solid #ccc; border-radius: 5px; max-height: 700px; overflow-y: auto; z-index: 100; width: 400px; text-align: left;">
            @{
                foreach(var i in Model)
                {
                    <div style="padding: 10px; border-bottom: 1px solid #eee;">
                        <span style="font-size: 12px; color: #777;">@i.CreateDay.ToString("yyyy-MM-dd HH:mm")</span><br>
                        <p style="margin: 0;">@i.Content</p>
                    </div>
                }
            }
        </div>
    }
}